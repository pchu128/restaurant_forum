<h1>TOP10 人氣餐廳</h1>
<hr />
<div class="row">
  {{#each restaurants}}
  <div class="col-md-3">
    <img class="card-img-top" src="{{this.image}}" alt="Card image cap" width="286px" height="180px">
  </div>
  <div class="col-md-9">
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <p class="card-text">
          <a href="/restaurants/{{this.id}}">
            {{this.name}}
          </a>
        </p>
        <span class="badge badge-secondary">{{this.categoryName}}</span>
        <p class="card-text">{{this.description}}</p>
        <div class="d-flex">
          {{#if this.isFavorited }}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST"><button type="submit" class="btn btn-danger m-1"><i
                class="fas fa-heart"></i></button></form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST"><button type="submit" class="btn btn-primary m-1"><i
                class="far fa-heart"></i></button></form>
          {{/if}}
        
          {{#if this.isLiked }}
          <form action="/like/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button type="submit"
              class="btn btn-danger m-1"><i class="fas fa-thumbs-up"></i></button></form>
          {{else}}
          <form action="/like/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
              class="btn btn-primary m-1"><i class="far fa-thumbs-up"></i></button></form>
          {{/if}}
        </div>

      </div>
    </div>
  </div>
  {{/each}}
</div>